CC = g++
INCPATH = 3rdparty/include
OBJS = main.o shader.o
LIBS = -lopengl32 -lglu32
MYLIBS = -L"3rdparty/libs" -lglfw -lglew32.dll -l3ds -lSOIL
LDFLAGS = $(MYLIBS) $(LIBS)
CFLAGS = -I$(INCPATH)

vbcpp.exe: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) -o vbcpp.exe $(LDFLAGS)
	
main.o: main.cpp
	$(CC) $(CFLAGS) -c main.cpp -o main.o $(LDFLAGS)

shader.o: shader.cpp
	$(CC) $(CFLAGS) -c shader.cpp -o shader.o $(LDFLAGS)
	
clean:
	del *.o *.exe
	
.PHONY: clean
